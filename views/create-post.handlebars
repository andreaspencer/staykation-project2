{{#if posts.length}}
<section>
    <h2>Your StayKations</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{!-- {{> post-info post}} --}}
            {{post.title}}
        </li>
        {{/each}}
    </ul>
</section>

{{else}}
<h6>You do not have any posts</h6>

{{/if}}

<h2 id="post-title">StayKation Experience</h2>

<textarea id="text-box" placeholder="Enter your experience here."></textarea>

<button onclick='myClickFunction()' id="submit-post">Post</button>
<button id="upload_widget" class="cloudinary-button">Upload files</button>

<p id='output'></p>


<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
<script src='/js/uploadimg.js'></script>
<script src='/js/create-post.js'></script>